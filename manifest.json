{
  "name": "Vocabulary Extension",
  "description": "Vocabulary Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tts",
    "scripting",
    "windows",
    "activeTab",
    "idle"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://api.dictionaryapi.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vocabulary Learning"
  },
  "icons": {
    "16": "icons/64x64.png",
    "32": "icons/128x128.png",
    "64": "icons/256x256.png",
    "128": "icons/512x512.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}